<div class="max-w-md mx-auto mt-10 bg-white rounded-lg shadow-lg p-8">
  <h2 class="text-2xl font-bold text-blue-700 mb-6 text-center">Manager Profile</h2>

  <div class="mb-6">
    <div class="flex items-center mb-2">
      <span class="font-semibold text-gray-700 w-32">Name:</span>
      <span class="text-gray-900">{{user.name}}</span>
    </div>
    <div class="flex items-center mb-2">
      <span class="font-semibold text-gray-700 w-32">Email:</span>
      <span class="text-gray-900">{{user.email}}</span>
    </div>
    <div class="flex items-center mb-2">
      <span class="font-semibold text-gray-700 w-32">Role:</span>
      <span class="text-gray-900">{{user.role}}</span>
    </div>
    <div class="flex items-center">
      <span class="font-semibold text-gray-700 w-32">Account Created:</span>
      <span class="text-gray-900">{{user.createdAt}}</span>
    </div>
  </div>

  <div class="mb-6">
    {{#if user.assignedDeliveries}}
      <h3 class="text-lg font-semibold text-blue-600 mb-2">Assigned Deliveries</h3>
      <ul class="list-disc pl-5 space-y-2">
        {{#each user.assignedDeliveries}}
          <li class="bg-gray-50 rounded p-3">
            <span class="font-semibold">Order ID:</span> {{this.id}}<br>
            <span class="font-semibold">Status:</span> {{this.status}}<br>
            <span class="font-semibold">Address:</span> {{this.address}}
          </li>
        {{/each}}
      </ul>
    {{else}}
    
    {{/if}}
  </div>

  <a class="block w-full text-center bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition mt-4" href="/auth/profile/edit">
    Edit Profile
  </a>
</div>
