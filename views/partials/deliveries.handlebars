<div class="min-h-screen bg-gray-50 p-4 lg:p-6">
    <!-- Header -->
    <div class="mb-6 lg:mb-8">
        <h1 class="text-2xl lg:text-3xl font-bold text-gray-800">All Deliveries</h1>
        <p class="text-gray-600 mt-1 lg:mt-2 text-sm lg:text-base">Manage and track all delivery orders</p>
    </div>

    <!-- Flash Messages -->
    {{#if success}}
    <div class="mb-4 lg:mb-6 bg-green-50 border border-green-200 rounded-lg lg:rounded-xl p-3 lg:p-4">
        <div class="flex items-center">
            <svg class="w-4 h-4 lg:w-5 lg:h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-green-800 font-medium text-sm lg:text-base">{{success}}</span>
        </div>
    </div>
    {{/if}}

    {{#if error}}
    <div class="mb-4 lg:mb-6 bg-red-50 border border-red-200 rounded-lg lg:rounded-xl p-3 lg:p-4">
        <div class="flex items-center">
            <svg class="w-4 h-4 lg:w-5 lg:h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
            </svg>
            <span class="text-red-800 font-medium text-sm lg:text-base">{{error}}</span>
        </div>
    </div>
    {{/if}}

    <!-- Deliveries Table -->
    <div class="bg-white rounded-lg lg:rounded-2xl shadow-lg overflow-hidden">
        <div class="px-4 lg:px-6 py-3 lg:py-4 border-b border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
                <h3 class="text-lg lg:text-xl font-bold text-gray-800">Delivery Orders</h3>
                <div class="flex items-center space-x-4 mt-2 sm:mt-0">
                    <span class="text-xs lg:text-sm text-gray-600">
                        Total: {{deliveries.length}} orders
                    </span>
                </div>
            </div>
        </div>
        
        <div class="overflow-x-auto">
            {{#if deliveries.length}}
            <!-- Desktop Table -->
            <div class="hidden lg:block">
                <table class="w-full min-w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Order ID</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Customer</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Address</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Items</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Created</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Rider</th>
                            <th class="px-4 lg:px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        {{#each deliveries}}
                        <tr class="hover:bg-gray-50 transition-colors duration-150 {{#if (eq this.status 'cancelled')}}line-through text-gray-400{{/if}}">
                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">#{{this.id}}</div>
                            </td>
                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                <div class="text-sm font-medium text-gray-900">{{this.customerName}}</div>
                            </td>
                            <td class="px-4 lg:px-6 py-4">
                                <div class="text-sm text-gray-600 max-w-xs">{{this.address}}</div>
                            </td>
                            <td class="px-4 lg:px-6 py-4">
                                <div class="text-sm text-gray-600">
                                    {{#each this.items}}
                                    <div class="flex items-center space-x-2 mb-1 last:mb-0">
                                        <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">{{this.quantity}}x</span>
                                        <span class="text-gray-700">{{this.name}}</span>
                                    </div>
                                    {{/each}}
                                </div>
                            </td>
                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2 lg:px-3 py-1 rounded-full text-xs font-semibold
                                    {{#if (eq this.status 'completed')}}bg-green-100 text-green-800
                                    {{else if (eq this.status 'in-progress')}}bg-yellow-100 text-yellow-800
                                    {{else if (eq this.status 'cancelled')}}bg-red-100 text-red-800
                                    {{else}}bg-gray-100 text-gray-800{{/if}}">
                                    {{#if (eq this.status 'completed')}}
                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                    </svg>
                                    {{else if (eq this.status 'in-progress')}}
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    {{else if (eq this.status 'cancelled')}}
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                    </svg>
                                    {{else}}
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    {{/if}}
                                    {{this.status}}
                                </span>
                            </td>
                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-600">
                                    {{formatDate this.createdAt}}
                                </div>
                            </td>
                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                {{#if this.riderId}}
                                <span class="inline-flex items-center px-2 lg:px-3 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-semibold">
                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                    </svg>
                                    Rider {{this.riderId}}
                                </span>
                                {{else}}
                                <form action="/manager/deliveries/{{this.id}}/assign-rider" method="POST" class="flex flex-col lg:flex-row lg:items-center space-y-2 lg:space-y-0 lg:space-x-2">
                                    <select name="riderId" class="text-sm border border-gray-300 rounded-lg px-2 lg:px-3 py-1 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent w-full lg:w-auto">
                                        <option value="">Select Rider</option>
                                        {{#each ../availableRiders}}
                                        <option value="{{this.id}}">{{this.name}}</option>
                                        {{/each}}
                                    </select>
                                    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-3 py-1 rounded-lg text-sm transition-colors duration-200 w-full lg:w-auto">
                                        Assign
                                    </button>
                                </form>
                                {{/if}}
                            </td>
                            <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                                <div class="flex flex-col lg:flex-row lg:items-center space-y-1 lg:space-y-0 lg:space-x-2">
                                    {{#unless (eq this.status 'cancelled')}}
                                    <form action="/manager/deliveries/{{this.id}}/cancel" method="POST" class="inline">
                                        <button type="submit" onclick="return confirm('Are you sure you want to cancel this delivery?')" class="text-amber-600 hover:text-amber-800 text-xs lg:text-sm font-medium transition-colors duration-200">
                                            Cancel
                                        </button>
                                    </form>
                                    {{/unless}}
                                    <form action="/manager/deliveries/{{this.id}}/delete" method="POST" class="inline">
                                        <button type="submit" onclick="return confirm('Are you sure you want to delete this delivery? This action cannot be undone.')" class="text-red-600 hover:text-red-800 text-xs lg:text-sm font-medium transition-colors duration-200">
                                            Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Mobile Cards -->
            <div class="lg:hidden space-y-4 p-4">
                {{#each deliveries}}
                <div class="bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition-shadow duration-200 {{#if (eq this.status 'cancelled')}}line-through text-gray-400{{/if}}">
                    <!-- Header -->
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <div class="font-semibold text-gray-900">#{{this.id}} - {{this.customerName}}</div>
                            <div class="text-xs text-gray-500 mt-1">{{formatDate this.createdAt}}</div>
                        </div>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold
                            {{#if (eq this.status 'completed')}}bg-green-100 text-green-800
                            {{else if (eq this.status 'in-progress')}}bg-yellow-100 text-yellow-800
                            {{else if (eq this.status 'cancelled')}}bg-red-100 text-red-800
                            {{else}}bg-gray-100 text-gray-800{{/if}}">
                            {{this.status}}
                        </span>
                    </div>

                    <!-- Address -->
                    <div class="mb-3">
                        <div class="text-xs text-gray-500 uppercase font-medium mb-1">Address</div>
                        <div class="text-sm text-gray-700">{{this.address}}</div>
                    </div>

                    <!-- Items -->
                    <div class="mb-3">
                        <div class="text-xs text-gray-500 uppercase font-medium mb-1">Items</div>
                        <div class="space-y-1">
                            {{#each this.items}}
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-700">{{this.name}}</span>
                                <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">Qty: {{this.quantity}}</span>
                            </div>
                            {{/each}}
                        </div>
                    </div>

                    <!-- Rider & Actions -->
                    <div class="flex flex-col space-y-3 pt-3 border-t border-gray-200">
                        <!-- Rider Assignment -->
                        <div>
                            <div class="text-xs text-gray-500 uppercase font-medium mb-2">Rider</div>
                            {{#if this.riderId}}
                            <span class="inline-flex items-center px-2 py-1 bg-purple-100 text-purple-800 rounded-full text-xs font-semibold">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Rider {{this.riderId}}
                            </span>
                            {{else}}
                            <form action="/manager/deliveries/{{this.id}}/assign-rider" method="POST" class="space-y-2">
                                <select name="riderId" class="text-sm border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent w-full">
                                    <option value="">Select Rider</option>
                                    {{#each ../availableRiders}}
                                    <option value="{{this.id}}">{{this.name}}</option>
                                    {{/each}}
                                </select>
                                <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm transition-colors duration-200 w-full">
                                    Assign Rider
                                </button>
                            </form>
                            {{/if}}
                        </div>

                        <!-- Actions -->
                        <div class="flex space-x-3">
                            {{#unless (eq this.status 'cancelled')}}
                            <form action="/manager/deliveries/{{this.id}}/cancel" method="POST" class="flex-1">
                                <button type="submit" onclick="return confirm('Are you sure you want to cancel this delivery?')" class="w-full bg-amber-500 hover:bg-amber-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-colors duration-200">
                                    Cancel
                                </button>
                            </form>
                            {{/unless}}
                            <form action="/manager/deliveries/{{this.id}}/delete" method="POST" class="flex-1">
                                <button type="submit" onclick="return confirm('Are you sure you want to delete this delivery? This action cannot be undone.')" class="w-full bg-red-500 hover:bg-red-600 text-white px-3 py-2 rounded-lg text-sm font-medium transition-colors duration-200">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{else}}
            <div class="text-center py-8 lg:py-12">
                <svg class="w-12 h-12 lg:w-16 lg:h-16 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                <h3 class="mt-3 lg:mt-4 text-base lg:text-lg font-medium text-gray-900">No deliveries found</h3>
                <p class="mt-1 text-gray-500 text-sm lg:text-base">Get started by creating a new delivery order.</p>
                <a href="/manager/add-delivery" class="inline-flex items-center mt-3 lg:mt-4 px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white font-medium rounded-lg transition-colors duration-200 text-sm lg:text-base">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    Add New Delivery
                </a>
            </div>
            {{/if}}
        </div>
    </div>
</div>

<!-- JavaScript for enhanced functionality -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Add confirmation for all form actions
    const forms = document.querySelectorAll('form');
    forms.forEach(form => {
        form.addEventListener('submit', function(e) {
            const button = this.querySelector('button[type="submit"]');
            if (button && (button.textContent.includes('Delete') || button.textContent.includes('delete'))) {
                if (!confirm('Are you sure you want to delete this delivery? This action cannot be undone.')) {
                    e.preventDefault();
                }
            } else if (button && (button.textContent.includes('Cancel') || button.textContent.includes('cancel'))) {
                if (!confirm('Are you sure you want to cancel this delivery?')) {
                    e.preventDefault();
                }
            }
        });
    });
});
</script>