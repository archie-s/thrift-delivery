<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Active Deliveries</h3>
        <div class="text-3xl font-bold text-blue-600">{{stats.activeDeliveries}}</div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Available Riders</h3>
        <div class="text-3xl font-bold text-green-600">{{stats.availableRiders}}</div>
    </div>
    
    <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-xl font-bold mb-4">Queued Orders</h3>
        <div class="text-3xl font-bold text-yellow-600">{{stats.queuedOrders}}</div>
    </div>
</div>

<div class="mt-8">
    <form method="GET" action="/manager/deliveries" class="mb-6 bg-white p-5 rounded-lg shadow">
        <div class="flex items-center justify-between mb-3">
            <h4 class="text-lg font-semibold">Filter Deliveries</h4>
            <a href="/manager/deliveries" class="text-sm text-blue-600 hover:text-blue-800">Open Full List</a>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
            <div class="md:col-span-2">
                <label class="block text-sm text-gray-600 mb-1">ID</label>
                <input type="text" name="id" placeholder="e.g. 12" class="w-full border rounded p-2" />
            </div>
            <div class="md:col-span-3">
                <label class="block text-sm text-gray-600 mb-1">Customer</label>
                <input type="text" name="customer" placeholder="Customer name" class="w-full border rounded p-2" />
            </div>
            <div class="md:col-span-3">
                <label class="block text-sm text-gray-600 mb-1">Pickup</label>
                <input type="text" name="pickup" placeholder="Pickup location" class="w-full border rounded p-2" />
            </div>
            <div class="md:col-span-3">
                <label class="block text-sm text-gray-600 mb-1">Dropoff</label>
                <input type="text" name="dropoff" placeholder="Dropoff location" class="w-full border rounded p-2" />
            </div>
            <div class="md:col-span-4">
                <label class="block text-sm text-gray-600 mb-1">Rider</label>
                <input type="text" name="rider" placeholder="Name or ID" class="w-full border rounded p-2" />
            </div>
            <div class="md:col-span-3">
                <label class="block text-sm text-gray-600 mb-1">Status</label>
                <select name="status" class="w-full border rounded p-2">
                    <option value="">Any Status</option>
                    <option value="pending">Pending</option>
                    <option value="assigned">Assigned</option>
                    <option value="in-progress">In Progress</option>
                    <option value="completed">Completed</option>
                    <option value="cancelled">Cancelled</option>
                </select>
            </div>
            <div class="md:col-span-5 flex items-end gap-2">
                <button class="bg-gray-900 hover:bg-gray-800 text-white px-4 py-2 rounded" type="submit">Apply Filters</button>
                <a href="/manager/deliveries" class="px-4 py-2 rounded border">Clear</a>
            </div>
        </div>
    </form>

    <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl font-bold">Recent Deliveries</h3>
        <a href="/manager/deliveries" class="text-blue-600 hover:text-blue-800">View All</a>
    </div>
    
    <div class="overflow-x-auto">
        {{#if stats.recentOrders}}
        <table class="min-w-full table-auto">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pickup</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dropoff</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rider</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {{#each stats.recentOrders}}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">{{this.id}}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{this.pickupLocation}}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{this.dropoffLocation}}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                            {{#if (eq this.status 'completed')}}bg-green-100 text-green-800
                            {{else if (eq this.status 'in-progress')}}bg-yellow-100 text-yellow-800
                            {{else}}bg-gray-100 text-gray-800{{/if}}">
                            {{this.status}}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {{#if this.riderId}}
                            {{#if this.riderName}}
                                {{this.riderName}} (ID: {{this.riderId}})
                            {{else}}
                                ID: {{this.riderId}}
                            {{/if}}
                        {{else}}
                            <span class="text-gray-500">Unassigned</span>
                        {{/if}}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="/manager/deliveries/{{this.id}}" class="text-blue-600 hover:text-blue-900 mr-4">View</a>
                        {{#unless this.riderId}}
                        <a href="/manager/assign-rider/{{this.id}}" class="text-green-600 hover:text-green-900">Assign Rider</a>
                        {{/unless}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        {{else}}
        <div class="text-center py-4 text-gray-500">
            No recent orders to display
        </div>
        {{/if}}
    </div>
</div>

<div class="mt-8 flex space-x-4">
    <a href="/manager/deliveries/add" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Add New Delivery
    </a>
    <a href="/manager/riders/add" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
    Add New Rider
</a>

     <a href="/manager/riders" class="bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded">
        View All Riders
    </a>

</div>